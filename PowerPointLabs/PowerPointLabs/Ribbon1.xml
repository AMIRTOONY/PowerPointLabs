<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab id="PowerPointLabsAddIns" label="PowerPointLabs">
        <group id="AutoMotionGroup"
               label="Auto Animate" visible ="true">
          <button id="AddAnimationButton"
                  label="Add Animation Slide"
                  size="large"
                  getImage="GetAddAnimationImage"
                  supertip="Adds a slide with animations to create an animated transition from the currently selected slide to the next slide."
                  getEnabled="OnGetEnabledAddAutoMotion"
                  onAction="AddAnimationButtonClick"/>
          <button id="ReloadButton"
                  label ="Recreate Animation"
                  size ="large"
                  getImage="GetReloadAnimationImage"
                  supertip="Recreates an existing animation slide with new animations.&#13;&#13;To activate, select the original slide or the animation slide (added previously) and click this button."
                  getEnabled="OnGetEnabledReloadAutoMotion"
                  onAction="ReloadButtonClick"/>
         <button id="InSlideAnimateButton"
                  label="Animate In Slide"
                  size="large"
                  getImage="GetInSlideAnimationImage"
                  supertip="Moves a shape around the slide in multiple steps.&#13;&#13;To activate, copy the shape to locations where you want it to stop, select the copies in the order you want them to appear, and click this button"
                  getEnabled="OnGetEnabledAddInSlide"
                  onAction="AddInSlideAnimationButtonClick"/>
          <editBox id="animationDurationOption"
                   label="Duration"
                   sizeString="AAAA"
                   supertip="The duration (in seconds) for the animations in the animation slides to be created."
                   getText = "OnGetDurationText"
                   onChange = "OnChangeDuration"/>
          <checkBox id="animationStyleOption"
                    label="Smoother Animation"
                    supertip="Use a frame-based approach for smoother resize animations.&#13;&#13;This may result in larger file sizes and slower loading times for animated slides."
                    onAction="AnimationStyleChanged"
                    getPressed="AnimationStyleGetPressed"/>
        </group>
        <group id="AutoZoomGroup"
               label="Auto Zoom" visible ="true">
          <button id="AddZoomInButton"
                 label ="Zoom In"
                 size ="large"
                 getImage="GetZoomImage"
                 supertip="Adds a slide with animations to create an zoom-in effect from the currently selected shape to the next slide.&#13;&#13;To activate, select a rectangle shape and click on this button."
                 getEnabled="OnGetEnabledZoomButton"
                 onAction="AddZoomInButtonClick"/>
          <button id="AddZoomOutButton"
                 label ="Zoom Out"
                 size ="large"
                 getImage="GetZoomImage"
                 supertip="Adds a slide with animations to create an zoom-out effect from the previous slide to the currently selected shape.&#13;&#13;To activate, select a rectangle shape and click on this button."
                 getEnabled="OnGetEnabledZoomButton"
                 onAction="AddZoomOutButtonClick"/>
        </group>
        <group id="SpotLightGroup"
               label="Spotlight"
               visible="true">
          <button   id="AddSpotlightButton"
                   label="Create Spotlight"
                   size="large"
                   supertip="Creates a spotlight effect for a selected shape.&#13;&#13;To activate, draw a shape to match the spotlight you want, select the shape, and click this button."
                   getImage="GetSpotlightImage"
                   getEnabled="OnGetEnabledSpotlight"
                   onAction="SpotlightBtnClick"/>
          <button id="ReloadSpotlightButton"
                  label ="Recreate Spotlight"
                  size ="large"
                  supertip="Adjusts the transparency and edges of an existing spotlight.&#13;&#13;To activate, set the transparency level and soft edges width, select the existing spotlight shape, and click this button."
                  getImage="GetReloadSpotlightImage"
                  getEnabled="OnGetEnabledReloadSpotlight"
                  onAction="ReloadSpotlightButtonClick"/>
          <editBox id="spotlightTransparency"
                   label="Transparency"
                   sizeString="AAAA"
                   supertip="The transparency level of the spotlight effect to be created."
                   getText = "OnGetTransparency"
                   onChange = "OnChangeTransparency"/>
          <dropDown id="spotlightSoftEdgesList"
                    label ="Soft Edges"
                    sizeString ="AAAAAAAA"
                    supertip="The softness of the edges of the spotlight effect to be created."
                    getItemCount ="OnGetItemCountSpotlight"
                    getItemLabel ="OnGetItemLabelSpotlight"
                    getSelectedItemIndex="OnGetSelectedItemIndexSpotlight" 
                    onAction ="OnSelectItemSpotlight" />
          <!--<checkBox id="SpotlightDeleteOption"
                    label="Delete Spotlight Shape"
                    supertip="Check this option if you want to delete the spotlight shape when adding this effect."
                    onAction="SpotlightDeleteOptionChanged"
                    getPressed="SpotlightDeleteOptionGetPressed"/>-->
        </group>
        <group id="embedAudio" label="Auto Narrate">
          <button id="addAudio"
                  label="Add Audio"
                  onAction="AddAudioClick"
                  keytip="NA"
                  supertip="Generates synthesized audio from text in the Speaker Notes pane, and adds it to the slide(s)."
                  getImage="GetAddAudioImage"
                  size="large" />
          <button id="removeAudio"
                  label="Remove Audio"
                  onAction="RemoveAudioClick"
                  supertip="Removes any generated audio that was added using Auto Narrate from the slide(s)."
                  keytip="NR"
                  getImage="GetRemoveAudioImage"
                  size="large" />
          <dropDown id="defaultVoicePicker"
                    label="Default Voice"
                    keytip="NV"
                    onAction="DefaultVoiceSelectionChanged"
                    supertip="The voice to be used when generating synthesized audio. Use [Voice] tags to specify a different voice for a particular section of text."
                    showImage="false"
                    getItemCount="DefaultVoicePickerCount"
                    getItemLabel="DefaultVoicePickerLabel"
                    getSelectedItemIndex="DefaultVoiceSelectedIndex" />
          <checkBox id="allSlides"
                    label="All Slides"
                    keytip="NL"
                    supertip="If checked, audio will be added to or removed from all slides, instead of just the current one."
                    onAction="AllSlidesChecked" />
          <checkBox id="previewCurrentSlide"
                    label="Preview"
                    keytip="NP"
                    supertip="If checked, the current slide's audio and animations will play after the Add Audio button is clicked."
                    onAction="PreviewCurrentSlideChecked" />
        </group>
        <group id="embedCaptions" label="Auto Captions">
          <button id="addCaptions"
                  label="Add Captions"
                  keytip="CA"
                  supertip="Generates movie-style subtitles from text in the Speaker Notes pane, and adds it to the slide(s)."
                  onAction="AddCaptionClick"
                  getImage="GetAddCaptionsImage"
                  size="large" />
          <button id="removeCaptions"
                  label="Remove Captions"
                  keytip="CR"
                  supertip="Removes any captions that were added using Auto Captions from the slide(s)."
                  onAction="RemoveCaptionClick"
                  getImage="GetRemoveCaptionsImage"
                  size="large" />
          <checkBox id="allSlidesCaptions"
                    label="All Slides"
                    keytip="CL"
                    supertip="If checked, captions will be added to or removed from all slides, instead of just the current one."
                    onAction="AllSlidesCaptionsChecked" />
        </group>
        <group id="PPTLabsHelp"
               label="Help"
               visible="true">
          <button id="HelpButton"
                  label="Help"
                  size="large"
                  getImage="GetHelpImage"
                  supertip="Click this to visit PowerPointLabs help page in our website."
                  onAction="HelpButtonClick"/>
          <button id="FeedbackButton"
                  label="Report Issues/ Send Feedback"
                  size="large"
                  getImage="GetFeedbackImage"
                  supertip="Click this to email us problem reports or other feedback. "
                  onAction="FeedbackButtonClick"/>
          <button id="aboutButton"
                  label="About"
                  size="large"
                  getImage="GetAboutImage"
                  supertip="Information about the PowerPointLabs plugin."
                  onAction="AboutButtonClick"/>
        </group>
        <group id="ComingSoon"
               label="Coming Soon"
               visible="true">
          <button id="MoveBulletsButton"
                 label ="Highlight Bullets"
                 size ="large"
                 getImage="GetHighlightBulletsImage"
                 supertip="*Feature Coming Soon!*"
                 onAction="HighlightBulletsButtonClick"/>
          <button id="MoveCropShapeButton"
                 label ="Cut-out Shape"
                 size ="large"
                 getImage="GetCropShapeImage"
                 supertip="*Feature Coming Soon!*"
                 onAction="CropShapeButtonClick"/>
        </group>
      </tab>
    </tabs>
  </ribbon>
  <contextMenus>
    <contextMenu idMso="ContextMenuShape">
      <menuSeparator id="separatorShape"/>
      <button id="nameEditShape"
              label="Edit Name"
              getImage="GetEditNameContextImage"
              onAction="NameEditBtnClick"/>
      <button id="spotlightShape"
              label="Add Spotlight"
              getImage="GetAddSpotlightContextImage"
              onAction="SpotlightBtnClick"/>
      <button id="zoomInContextMenu"
              label ="Zoom In"
              getImage="GetZoomImage"
              getEnabled="OnGetEnabledZoomButton"
              onAction="AddZoomInButtonClick"/>
      <button id="zoomOutContextMenu"
             label ="Zoom Out"
             getImage="GetZoomImage"
             getEnabled="OnGetEnabledZoomButton"
             onAction="AddZoomOutButtonClick"/>
      <button id="fitToWidthShape"
              label="Fit To Width"
              getImage="GetFitToWidthImage"
              onAction="FitToWidthClick"/>
      <button id="fitToHeightShape"
              label="Fit To Height"
              getImage="GetFitToHeightImage"
              onAction="FitToHeightClick"/>
    </contextMenu>
    <contextMenu idMso="ContextMenuShapeFreeform">
      <menuSeparator id="separatorFreeform"/>
      <button id="nameEditFreeform"
              label="Edit Name"
              getImage="GetEditNameContextImage"
              onAction="NameEditBtnClick"/>
      <button id="spotlightFreeform"
              label="Add Spotlight"
              getImage="GetAddSpotlightContextImage"
              onAction="SpotlightBtnClick"/>
      <button id="fitToWidthFreeform"
              label="Fit To Width"
              getImage="GetFitToWidthImage"
              onAction="FitToWidthClick"/>
      <button id="fitToHeightFreeform"
              label="Fit To Height"
              getImage="GetFitToHeightImage"
              onAction="FitToHeightClick"/>
    </contextMenu>
    <contextMenu idMso="ContextMenuPicture">
      <menuSeparator id="separatorPicture"/>
      <button id="nameEditPicture"
              label="Edit Name"
              getImage="GetEditNameContextImage"
              onAction="NameEditBtnClick"/>
      <button id="fitToWidthPicture"
              label="Fit To Width"
              getImage="GetFitToWidthImage"
              onAction="FitToWidthClick"/>
      <button id="fitToHeightPicture"
              label="Fit To Height"
              getImage="GetFitToHeightImage"
              onAction="FitToHeightClick"/>
    </contextMenu>
    <contextMenu idMso="ContextMenuChartArea">
      <menuSeparator id="separatorChart"/>
      <button id="nameEditChart"
              label="Edit Name"
              getImage="GetEditNameContextImage"
              onAction="NameEditBtnClick"/>
      <button id="fitToWidthChart"
              label="Fit To Width"
              getImage="GetFitToWidthImage"
              onAction="FitToWidthClick"/>
      <button id="fitToHeightChart"
              label="Fit To Height"
              getImage="GetFitToHeightImage"
              onAction="FitToHeightClick"/>
    </contextMenu>
    <contextMenu idMso="ContextMenuTable">
      <menuSeparator id="separatorTable"/>
      <button id="nameEditTable"
              label="Edit Name"
              getImage="GetEditNameContextImage"
              onAction="NameEditBtnClick"/>
      <button id="fitToWidthTable"
              label="Fit To Width"
              getImage="GetFitToWidthImage"
              onAction="FitToWidthClick"/>
      <button id="fitToHeightTable"
              label="Fit To Height"
              getImage="GetFitToHeightImage"
              onAction="FitToHeightClick"/>
    </contextMenu>
    <contextMenu idMso="ContextMenuObjectsGroup">
      <menuSeparator id="separatorGroup"/>
      <button id="nameEditGroup"
              label="Edit Name"
              getImage="GetEditNameContextImage"
              onAction="NameEditBtnClick"/>
      <!--<button id="zoomShape"
              label="Add Zoom"
              imageMso="PanAndZoomWindow"
              onAction="ZoomBtnClick"/>-->
      <button id="spotlightGroup"
              label="Add Spotlight"
              getImage="GetAddSpotlightContextImage"
              onAction="SpotlightBtnClick"/>
      <button id="inSlideAnimateGroup"
              label="Animate In-Slide"
              getImage="GetInSlideAnimationContextImage"
              getEnabled="OnGetEnabledAddInSlide"
              onAction="AddInSlideAnimationButtonClick"/>
    </contextMenu>
    <contextMenu idMso="ContextMenuInk">
      <menuSeparator id="separatorInk"/>
      <button id="nameEditInk"
              label="Edit Name"
              getImage="GetEditNameContextImage"
              onAction="NameEditBtnClick"/>
    </contextMenu>
    <contextMenu idMso="ContextMenuSmartArtBackground">
      <menuSeparator id="separatorSmartArt"/>
      <button id="nameEditSmartArt"
              label="Edit Name"
              getImage="GetEditNameContextImage"
              onAction="NameEditBtnClick"/>
    </contextMenu>
    <contextMenu idMso="ContextMenuThumbnail">
      <menuSeparator id="separatorThumbnail"/>
      <button id="applyAutoMotionThumbnail"
              label="Add Animation Slide"
              getImage="GetAddAnimationContextImage"
              getEnabled="OnGetEnabledAddAutoMotion"
              onAction="AddAnimationButtonClick"/>
      <button id="reloadAutoMotionThumbnail"
              label="Recreate Animation"
              getImage="GetReloadAnimationContextImage"
              getEnabled="OnGetEnabledReloadAutoMotion"
              onAction="ReloadButtonClick"/>
    </contextMenu>
    <contextMenu idMso="ContextMenuNotesEditText">
      <menuSeparator id="separatorNotes" />
      <button id="contextSpeakSelectedText"
              label="Speak Selected Text"
              getImage="GetPreviewNarrationContextImage"
              onAction="SpeakSelectedTextClick"/>
      <button id="contextAddCurrentSlide"
              label="Add Audio (Current Slide)"
              getImage="GetAddAudioContextImage"
              onAction="ContextAddAudioClick"/>
    </contextMenu>
    <contextMenu idMso="ContextMenuAudio">
      <menuSeparator id="separatorShapes"/>
      <button id="contextReplaceAudio"
              label="Replace Audio"
              imageMso="NoAudioStyle"
              onAction="ContextReplaceAudioClick"/>
    </contextMenu>
  </contextMenus>
</customUI>

