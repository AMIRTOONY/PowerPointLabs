<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerPointLabs.DrawingsLab"
             xmlns:converters="clr-namespace:PowerPointLabs.Converters"
             xmlns:dataSources="clr-namespace:PowerPointLabs.DataSources"
             x:Class="PowerPointLabs.DrawingsLab.DrawingsPaneWPF" 
             mc:Ignorable="d" 
             d:DesignWidth="304" d:DesignHeight="883">
    <UserControl.Resources>
        <local:DrawingsLabMain x:Key="DrawingsLab"/>
        <dataSources:DrawingsLabDataSource x:Key="DrawingsLabData"/>
        <converters:FloatToStringConverter x:Key="FloatToStringConverter"/>
        <converters:EnumMatchToBooleanConverter x:Key="EnumMatchToBooleanConverter"/>
    </UserControl.Resources>
    <Grid DataContext="{StaticResource DrawingsLabData}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Line" Grid.Row="1" Grid.Column="0" Click="LineButton_Click"/>
        <Button Content="Rect" Grid.Row="1" Grid.Column="1" Click="LineButton_Click"/>
        <Button Content="Circle" Grid.Row="1" Grid.Column="2" Click="LineButton_Click"/>
        <Button Content="SelectType" Grid.Row="2" Grid.Column="0" Click="SelectAllOfTypeButton_Click"/>
        <Button Content="Hide" Grid.Row="2" Grid.Column="2" Click="HideButton_Click"/>
        <Button Content="ShowAll" Grid.Row="2" Grid.Column="3" Click="ShowAllButton_Click"/>
        <Button Content="Clone" Grid.Row="3" Grid.Column="2" Click="CloneButton_Click"/>
        <Button Content="MultiClone Extend" Grid.Row="3" Grid.Column="3" Click="MultiCloneExtendButton_Click"/>
        <Button Content="MultiClone Between" Grid.Row="3" Grid.Column="4" Click="MultiCloneBetweenButton_Click"/>
        <TextBox Grid.Row="4" Grid.Column="1" IsEnabled="{Binding IsChecked, ElementName=ShiftIncludeX}" Text="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=ShiftValueX, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}}"/>
        <TextBox Grid.Row="4" Grid.Column="2" IsEnabled="{Binding IsChecked, ElementName=ShiftIncludeY}" Text="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=ShiftValueY, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}}"/>
        <TextBox Grid.Row="4" Grid.Column="3" IsEnabled="{Binding IsChecked, ElementName=ShiftIncludeRotation}" Text="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=ShiftValueRotation, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}}"/>
        <TextBox Grid.Row="6" Grid.Column="1" IsEnabled="{Binding IsChecked, ElementName=SavedIncludeX}" Text="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=SavedValueX, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}}"/>
        <TextBox Grid.Row="6" Grid.Column="2" IsEnabled="{Binding IsChecked, ElementName=SavedIncludeY}" Text="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=SavedValueY, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}}"/>
        <TextBox Grid.Row="6" Grid.Column="3" IsEnabled="{Binding IsChecked, ElementName=SavedIncludeRotation}" Text="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=SavedValueRotation, Mode=TwoWay, Converter={StaticResource FloatToStringConverter}}"/>

        <CheckBox Grid.Row="5" Grid.Column="0" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=ShiftIncludePositionBoth, Mode=TwoWay}"/>
        <CheckBox x:Name="ShiftIncludeX" Grid.Row="5" Grid.Column="1" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=ShiftIncludePositionX, Mode=TwoWay}"/>
        <CheckBox x:Name="ShiftIncludeY" Grid.Row="5" Grid.Column="2" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=ShiftIncludePositionY, Mode=TwoWay}"/>
        <CheckBox x:Name="ShiftIncludeRotation" Grid.Row="5" Grid.Column="3" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=ShiftIncludeRotation, Mode=TwoWay}"/>
        <CheckBox Grid.Row="7" Grid.Column="0" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=SavedIncludePositionBoth, Mode=TwoWay}"/>
        <CheckBox x:Name="SavedIncludeX" Grid.Row="7" Grid.Column="1" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=SavedIncludePositionX, Mode=TwoWay}"/>
        <CheckBox x:Name="SavedIncludeY" Grid.Row="7" Grid.Column="2" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=SavedIncludePositionY, Mode=TwoWay}"/>
        <CheckBox x:Name="SavedIncludeRotation" Grid.Row="7" Grid.Column="3" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=SavedIncludeRotation, Mode=TwoWay}"/>

        <Button Content="RecordDisplacement" Grid.Row="4" Grid.RowSpan="2" Grid.Column="4" Click="RecordDisplacementButton_Click"/>
        <Button Content="ApplyDisplacement" Grid.Row="4" Grid.RowSpan="2" Grid.Column="5" Click="ApplyDisplacementButton_Click"/>
        <Button Content="RecordPosition" Grid.Row="6" Grid.RowSpan="2" Grid.Column="4" Click="RecordPositionButton_Click"/>
        <Button Content="ApplyPosition" Grid.Row="6" Grid.RowSpan="2" Grid.Column="5" Click="ApplyPositionButton_Click"/>

        <RadioButton Content="" Grid.Row="8" Grid.Column="0" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=Anchor, Mode=TwoWay, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter=TopLeft}"/>
        <RadioButton Content="" Grid.Row="8" Grid.Column="1" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=Anchor, Mode=TwoWay, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter=TopCenter}"/>
        <RadioButton Content="" Grid.Row="8" Grid.Column="2" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=Anchor, Mode=TwoWay, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter=TopRight}"/>
        <RadioButton Content="" Grid.Row="9" Grid.Column="0" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=Anchor, Mode=TwoWay, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter=MiddleLeft}"/>
        <RadioButton Content="" Grid.Row="9" Grid.Column="1" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=Anchor, Mode=TwoWay, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter=MiddleCenter}"/>
        <RadioButton Content="" Grid.Row="9" Grid.Column="2" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=Anchor, Mode=TwoWay, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter=MiddleRight}"/>
        <RadioButton Content="" Grid.Row="10" Grid.Column="0" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=Anchor, Mode=TwoWay, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter=BottomLeft}"/>
        <RadioButton Content="" Grid.Row="10" Grid.Column="1" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=Anchor, Mode=TwoWay, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter=BottomCenter}"/>
        <RadioButton Content="" Grid.Row="10" Grid.Column="2" IsChecked="{Binding UpdateSourceTrigger=PropertyChanged, Source={StaticResource DrawingsLabData}, Path=Anchor, Mode=TwoWay, Converter={StaticResource EnumMatchToBooleanConverter}, ConverterParameter=BottomRight}"/>

        <Button Content="BringInFrontOfShape" Grid.Row="11" Grid.Column="2" Click="BringInFrontOfShapeButton_Click"/>
        <Button Content="SendBehindShaoe" Grid.Row="11" Grid.Column="3" Click="SendBehindShapeButton_Click"/>
        <Button Content="BringToFront" Grid.Row="12" Grid.Column="1" Click="BringToFrontButton_Click"/>
        <Button Content="BringForward" Grid.Row="12" Grid.Column="2" Click="BringForwardButton_Click"/>
        <Button Content="SendBackward" Grid.Row="12" Grid.Column="3" Click="SendBackwardButton_Click"/>
        <Button Content="SendToBack" Grid.Row="12" Grid.Column="4" Click="SendToBackButton_Click"/>

    </Grid>
</UserControl>